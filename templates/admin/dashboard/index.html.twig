{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card bg-primary text-white m-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.users}} utilisateurs</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-warning text-white m-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-hotel fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.ads}}  annonces</h4>
                        </div>
                    </div>
                </div>
            </div>
        
        </div>
        <div class="col">
            <div class="card bg-success text-white m-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-folder fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.bookings}}  reservations</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-info text-white m-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-comments fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.comments}}  avis</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row mt-3 p-3">
        <div class="col">
            <div class="alert alert-success">
                <div class="alert-heading my-3 h3 d-flex align-items-center"><i class="fas fa-thumbs-up fa-2x mr-3 "></i>Les annonces populaires</div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Annonces</th>
                            <th>Proprio</th>
                            <th>Moyenne</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ad in bestAds %}   
                            <tr>
                                <td>{{ad.title}}</td>
                                <td><img src="{{ad.picture}}" class="avatar avatar-mini" alt="photo de {{ad.firstName}}"> {{ad.firstName}} {{ad.lastName}}</td>
                                <td class='badge badge-info'>{{ad.note | number_format(1,","," ")}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col">
            <div class="alert alert-danger">
                <div class="alert-heading my-3 h3 d-flex align-items-center"><i class="fas fa-thumbs-down fa-2x mr-3"></i>Les annonces pourris</div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Annonces</th>
                            <th>Proprio</th>
                            <th>Moyenne</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ad in worstAds %}   
                            <tr>
                                <td>{{ad.title}}</td>
                                <td><img src="{{ad.picture}}" class="avatar avatar-mini" alt="photo de {{ad.firstName}}"> {{ad.firstName}} {{ad.lastName}}</td>
                                <td class='badge badge-info'>{{ad.note | number_format(1,","," ")}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
