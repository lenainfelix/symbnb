{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid px-5">
    <h1 class="my-5">Gestion de utilisateurs</h1>
</div>

<div class="container-fluid px-5">
    <table class="table table-hover">
        <thead>
            <tr class="d-flex ">
                <th class="col-md-1">Id</th>
                <th class="col-md-1">Photo</th>
                <th class="col-md-1">Nom</th>
                <th class="col-md-1">Pr√©nom</th>
                <th class="col-md-2">Introduction</th>
                <th class="col-md-2">Description</th>
                <th class="col-md-1">Nbr d'annonces</th>
                <th class="col-md-1">Nbr de reservations</th>
                <th class="col-md-1">Nbr de commentaires</th>
                <th class="col-md-1">Actions</th>
            </tr>
        </thead>
        {% for user in users %}  
            <tbody>
                <tr class="d-flex " >
                    <td class="col-md-1">{{user.id}}</td>
                    <td class="col-md-1"><img src="{{user.picture}}" class="avatar avatar-mini" alt="photo de {{user.firstName}}"></td>
                    <td class="col-md-1">{{user.lastName}}</td>
                    <td class="col-md-1">{{user.firstName}}</td>
                    <td class="col-md-2">{{user.introduction}}</td>
                    <td class="col-md-2">{{user.description|raw}}</td>
                    <td class="col-md-1"><span class="badge badge-info">{{user.ads|length}}</span></td>
                    <td class="col-md-1"><span class="badge badge-info">{{user.bookings|length}}</span></td>
                    <td class="col-md-1"><span class="badge badge-info">{{user.comments|length}}</span></td>
                    <td class="col-md-1">
                        <a href="{{ path('admin_users_edit', {'id': user.id})}}" class="btn btn-info"><i class="fas fa-pen"></i></a>
                        <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                    {# {{ path('admin_bookings_edit', {'id': booking.id})}} #}

                </tr>
            </tbody>
        {% endfor %}
    </table>
</div>

{% endblock %}
